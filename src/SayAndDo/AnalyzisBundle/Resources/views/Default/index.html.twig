{% extends '::admin.html.twig' %}

{% block inner_content %}
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            <table class="table table-condensed table-hover">
                <thead>
                <tr>
                    <th>Antraštė</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for document in documents %}
                    <tr>
                        <td><a href="{{ path("say_and_do_analyzis_homepage.view", {'id' : document.id}) }}">{{ document.title }}</a> </td>
                        <td>
                            <a class="btn btn-xs btn-danger"
                               href="{{ path("say_and_do_analyzis_homepage.remove", {'id' : document.id}) }}"><i class="fa glyphicon glyphicon-remove"> </i> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form role="form" action="{{ path("say_and_do_analyzis_homepage.add") }}" method="post">
                <div class="form-group">
                    <label>URL</label>
                    <input type="text" name="url" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Antraštė</label>
                    <input type="text" name="title" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Turinys</label>
                    <textarea class="form-control" name="content" cols="30" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Pridėti dokumentą</button>
            </form>
            <br>
            <br>
        </div>
    </div>
{% endblock %}
